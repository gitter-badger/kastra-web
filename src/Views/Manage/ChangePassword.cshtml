@using Kastra.Web.Models.Manage;
@model ChangePasswordViewModel
@{
    Layout = "_StaticLayout";
    ViewData["Title"] = "Change Password";
}

<header class="title">
    <h2>@ViewData["Title"].</h2>
</header>

<form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
    <h4>Change Password Form</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="field">
        <label asp-for="OldPassword"></label>
        <div class="col-md-10">
            <input asp-for="OldPassword" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="field">
        <label asp-for="NewPassword"></label>
        <div class="col-md-10">
            <input asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="field">
        <label asp-for="ConfirmPassword"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="actions">
        <button type="submit" class="button button-primary">Change password</button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
